<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Hawkers_StallInfoFragment"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="30dp"
    android:paddingBottom="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/ic_back"/>

        <TextView
            android:id="@+id/stallName_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hawker Stall Name"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginHorizontal="12dp"/>

        <Button
            android:id="@+id/favourite_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/button"
            android:padding="2dp" />

    </LinearLayout>

    <RatingBar
        android:id="@+id/stall_rb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="0" />

    <TextView
        android:id="@+id/hawkerCentreName_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Market Name" />

    <ImageView
        android:id="@+id/stall_img"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_gravity="left" />

    <TextView
        android:id="@+id/unitNumber_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unit Number"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/contactNumber_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Number"
        android:padding="5dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:text="Item"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="Price"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="Availability"
            android:textStyle="bold"/>

    </LinearLayout>

    <ListView
        android:id="@+id/menuItems_lv"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/getDirections_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Directions"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/reportProblem_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Problem"/>

</LinearLayout>